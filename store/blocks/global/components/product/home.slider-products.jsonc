{
    "flex-layout.row#global__product--list": {
        "children": [
            "flex-layout.col#global__product--list"
        ]
    },
    "flex-layout.col#global__product--list": {
        "children": [
            "list-context.product-list#global__slider--home--products"
        ],

        "props": {
            "blockClass": "global__product__slider--list"
        }
    },
    "list-context.product-list#global__slider--home--products": {
        "title": "Lista productos home",
        "blocks": [
            "product-summary.shelf#home__product--shelf"
        ],
        "children": [
            "slider-layout#global__products--lanzamientos"
        ],
        "props": {
            "blockClass": "global__list--products"
        }
    },
    "product-summary.shelf#home__product--shelf": {
        "children": [
            "product-summary-image",
            "product-summary-space",
            "product-summary-name",
            "product-summary-price",
            "product-summary-buy-button"
        ],

        "props":{
            "blockClass":"global_container_product--shelf"
        }
    },
    "add-to-cart-button": {
        "props": {
            "text": "COMPRAR",
            "blockClass": "comprar__button--global"
        }
    },
    "slider-layout#global__products--lanzamientos": {
        "props": {
            "itemsPerPage": {
                "desktop": 5,
                "tablet": 3,
                "phone": 1
            },
            "infinite": true,
            "showPaginationDots": "never",
            "blockClass": "slider__global--products",
            "fullWidth": false
        }
    }
}